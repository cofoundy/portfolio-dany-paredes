---
// "El Fighter" section — Dany's combat sports background
import { siteConfig } from "../config";
const fighter = siteConfig.fighter;
---

<section id="fighter" class="py-24 md:py-32 bg-[#0a0a0a] relative overflow-hidden">
  <!-- Subtle background glow -->
  <div class="absolute top-1/2 right-0 w-[500px] h-[500px] bg-[#d4a84b]/[0.02] rounded-full blur-[120px] pointer-events-none"></div>

  <div class="max-w-6xl mx-auto px-6">

    <!-- Section title -->
    <div class="text-center mb-20 reveal">
      <span class="text-[#d4a84b] text-sm uppercase tracking-[0.3em] font-medium">El Fighter</span>
      <h2 class="font-['Bebas_Neue'] text-5xl md:text-7xl text-white mt-3">{fighter.title}</h2>
      <div class="w-20 h-[2px] bg-gradient-to-r from-transparent via-[#d4a84b]/60 to-transparent mx-auto mt-5"></div>
    </div>

    <div class="max-w-5xl mx-auto">
      <!-- Main narrative -->
      <div class="reveal stagger-1 grid md:grid-cols-5 gap-10 md:gap-16 items-center mb-16">
        <!-- Text -->
        <div class="md:col-span-3">
          <p class="text-[#a3a3a3] text-lg leading-relaxed">{fighter.description}</p>
          <div class="flex flex-wrap gap-3 mt-8">
            {fighter.roles.map((role) => (
              <span class="px-5 py-2.5 bg-[#1a1a1a] border border-[#2a2a2a] rounded-lg text-sm text-[#d4a84b] font-medium hover:border-[#d4a84b]/40 hover:bg-[#d4a84b]/5 transition-all cursor-default">
                {role}
              </span>
            ))}
          </div>
          <p class="text-[#a3a3a3]/50 text-sm mt-5 flex items-center gap-2">
            <span class="w-1.5 h-1.5 rounded-full bg-[#d4a84b]/40"></span>
            {fighter.gym} · {fighter.period}
          </p>
        </div>

        <!-- Boxing ring visual (more dramatic) -->
        <div class="md:col-span-2 flex justify-center">
          <div class="relative w-52 h-52 md:w-64 md:h-64">
            <!-- Outer ring with gradient -->
            <div class="absolute inset-0 rounded-full border-2 border-[#d4a84b]/20" style="background: radial-gradient(circle, rgba(212,168,75,0.03) 0%, transparent 70%);"></div>
            <!-- Middle ring -->
            <div class="absolute inset-4 rounded-full border border-[#d4a84b]/10"></div>
            <!-- Inner ring -->
            <div class="absolute inset-8 rounded-full border border-[#d4a84b]/5"></div>
            <!-- Center icon -->
            <div class="absolute inset-0 flex items-center justify-center">
              <svg class="w-24 h-24 text-[#d4a84b]/20" fill="currentColor" viewBox="0 0 24 24">
                <path d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11"/>
              </svg>
            </div>
            <!-- Corner accents -->
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-2 h-2 bg-[#d4a84b]/30 rounded-full"></div>
            <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-2 h-2 bg-[#d4a84b]/30 rounded-full"></div>
            <div class="absolute left-0 top-1/2 -translate-y-1/2 w-2 h-2 bg-[#d4a84b]/30 rounded-full"></div>
            <div class="absolute right-0 top-1/2 -translate-y-1/2 w-2 h-2 bg-[#d4a84b]/30 rounded-full"></div>
          </div>
        </div>
      </div>

      <!-- Quote (full-width, dramatic) -->
      <div class="reveal stagger-2">
        <div class="relative py-12 px-8 md:px-16">
          <!-- Gold line top -->
          <div class="absolute top-0 left-1/2 -translate-x-1/2 w-16 h-[1px] bg-gradient-to-r from-transparent via-[#d4a84b]/40 to-transparent"></div>
          <!-- Quote mark -->
          <div class="absolute top-6 left-8 md:left-16">
            <svg class="w-10 h-10 text-[#d4a84b]/10" fill="currentColor" viewBox="0 0 24 24"><path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H14.017zM0 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H0z"/></svg>
          </div>
          <blockquote class="text-center quote-float">
            <p class="font-['Playfair_Display'] italic text-white text-2xl md:text-3xl lg:text-4xl leading-relaxed">
              "{siteConfig.quote.text}"
            </p>
            <cite class="block mt-6 text-[#d4a84b] text-sm not-italic tracking-widest uppercase">— {siteConfig.quote.author}</cite>
          </blockquote>
          <!-- Gold line bottom -->
          <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-16 h-[1px] bg-gradient-to-r from-transparent via-[#d4a84b]/40 to-transparent"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="h-[2px] bar-shimmer"></div>

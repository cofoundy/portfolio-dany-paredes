---
// Trayectoria â€” Journey timeline
import { siteConfig } from "../config";
const journey = siteConfig.journey;
---

<section id="trayectoria" class="py-20 md:py-28 bg-[#111111]">
  <div class="max-w-6xl mx-auto px-6">

    <!-- Section title -->
    <div class="text-center mb-16 reveal">
      <span class="text-[#d4a84b] text-sm uppercase tracking-[0.3em] font-medium">Trayectoria</span>
      <h2 class="font-['Bebas_Neue'] text-5xl md:text-6xl text-white mt-3">El Camino</h2>
      <div class="w-16 h-[2px] bg-[#d4a84b]/40 mx-auto mt-4"></div>
    </div>

    <!-- Vertical timeline -->
    <div class="relative max-w-3xl mx-auto">
      <!-- Timeline line -->
      <div class="absolute left-6 md:left-1/2 md:-translate-x-px top-0 bottom-0 w-[2px] bg-[#2a2a2a]">
        <div class="timeline-line absolute top-0 left-0 w-full bg-gradient-to-b from-[#d4a84b] to-[#d4a84b]/20"></div>
      </div>

      {journey.map((item, i) => (
        <div class={`reveal stagger-${Math.min(i + 1, 6)} relative flex items-start gap-6 mb-12 md:mb-16 ${i % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
          <!-- Dot -->
          <div class="absolute left-6 md:left-1/2 -translate-x-1/2 w-4 h-4 rounded-full bg-[#d4a84b] border-4 border-[#111111] z-10 mt-1"></div>

          <!-- Card -->
          <div class={`ml-14 md:ml-0 md:w-[calc(50%-2rem)] ${i % 2 === 0 ? 'md:pr-8' : 'md:pl-8'}`}>
            <div class="bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-6 card-hover gold-glow">
              <div class="flex items-center gap-3 mb-2">
                <span class="font-['Bebas_Neue'] text-2xl text-[#d4a84b]">{item.year}</span>
                <div class="h-[1px] flex-1 bg-[#2a2a2a]"></div>
              </div>
              <h3 class="text-white font-semibold text-lg">{item.title}</h3>
              <p class="text-[#a3a3a3]/60 text-xs mt-1 flex items-center gap-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/></svg>
                {item.place}
              </p>
              <p class="text-[#a3a3a3] text-sm mt-3 leading-relaxed">{item.desc}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

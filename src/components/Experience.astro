---
// Trayectoria â€” Journey timeline
import { siteConfig } from "../config";
const journey = siteConfig.journey;
---

<section id="trayectoria" class="py-24 md:py-32 bg-[#111111] relative overflow-hidden">
  <!-- Background glow -->
  <div class="absolute top-1/2 left-0 w-[400px] h-[600px] bg-[#d4a84b]/[0.02] rounded-full blur-[120px] pointer-events-none"></div>

  <div class="max-w-6xl mx-auto px-6">

    <!-- Section title -->
    <div class="text-center mb-20 reveal">
      <span class="text-[#d4a84b] text-sm uppercase tracking-[0.3em] font-medium">Percorso</span>
      <h2 class="font-['Bebas_Neue'] text-5xl md:text-7xl text-white mt-3">Il Cammino</h2>
      <div class="w-20 h-[2px] bg-gradient-to-r from-transparent via-[#d4a84b]/60 to-transparent mx-auto mt-5"></div>
    </div>

    <!-- Vertical timeline -->
    <div class="relative max-w-3xl mx-auto">
      <!-- Timeline line -->
      <div class="absolute left-6 md:left-1/2 md:-translate-x-px top-0 bottom-0 w-[2px] bg-[#2a2a2a]">
        <div class="timeline-line absolute top-0 left-0 w-full bg-gradient-to-b from-[#d4a84b] via-[#d4a84b]/40 to-[#d4a84b]/10"></div>
      </div>

      {journey.map((item, i) => (
        <div class={`reveal stagger-${Math.min(i + 1, 6)} relative flex items-start gap-6 mb-14 md:mb-20 ${i % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
          <!-- Dot with pulse -->
          <div class="absolute left-6 md:left-1/2 -translate-x-1/2 z-10 mt-1">
            <div class="w-4 h-4 rounded-full bg-[#d4a84b] border-4 border-[#111111] timeline-dot"></div>
          </div>

          <!-- Card -->
          <div class={`ml-14 md:ml-0 md:w-[calc(50%-2rem)] ${i % 2 === 0 ? 'md:pr-8' : 'md:pl-8'}`}>
            <div class="group bg-[#1a1a1a] border border-[#2a2a2a] rounded-xl p-7 card-hover">
              <div class="flex items-center gap-3 mb-3">
                <span class="font-['Bebas_Neue'] text-3xl text-[#d4a84b] group-hover:text-[#e0b85c] transition-colors">{item.year}</span>
                <div class="h-[1px] flex-1 bg-gradient-to-r from-[#2a2a2a] to-transparent"></div>
              </div>
              <h3 class="text-white font-semibold text-lg">{item.title}</h3>
              <p class="text-[#a3a3a3]/50 text-xs mt-1 flex items-center gap-1.5">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/></svg>
                {item.place}
              </p>
              <p class="text-[#a3a3a3] text-sm mt-3 leading-relaxed">{item.desc}</p>
            </div>
          </div>
        </div>
      ))}

      <!-- End dot -->
      <div class="absolute left-6 md:left-1/2 -translate-x-1/2 bottom-0 w-3 h-3 rounded-full bg-[#d4a84b]/30 border-2 border-[#d4a84b]/20"></div>
    </div>
  </div>
</section>

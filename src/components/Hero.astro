---
import { siteConfig } from "../config";
---

<section id="hero" class="relative min-h-screen flex items-center bg-[#0a0a0a] overflow-hidden">
  <!-- Grain overlay -->
  <div class="absolute inset-0 opacity-[0.03] pointer-events-none" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E&quot;);"></div>

  <!-- Gold radial glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-[#d4a84b]/5 rounded-full blur-[120px] pointer-events-none"></div>

  <div class="relative z-10 w-full max-w-6xl mx-auto px-6 py-20 md:py-0">
    <div class="flex flex-col md:flex-row items-center gap-10 md:gap-16">

      <!-- Photo -->
      <div class="hero-photo flex-shrink-0">
        <div class="relative w-44 h-44 md:w-60 md:h-60 rounded-full overflow-hidden border-2 border-[#d4a84b]/40">
          <img src="/profile.jpg" alt={siteConfig.name} class="w-full h-full object-cover" loading="eager" />
        </div>
      </div>

      <!-- Content -->
      <div class="text-center md:text-left flex-1">
        <h1 class="hero-name font-['Bebas_Neue'] text-6xl sm:text-7xl md:text-8xl lg:text-9xl text-white leading-none tracking-wide">
          DANY<br/><span class="text-[#d4a84b]">PAREDES</span>
        </h1>

        <!-- Role pills -->
        <div class="hero-title flex flex-wrap justify-center md:justify-start gap-3 mt-5">
          {["Fighter", "Maker", "Entrepreneur"].map((role) => (
            <span class="px-4 py-1.5 text-xs font-medium text-[#d4a84b] border border-[#d4a84b]/30 rounded-full tracking-widest uppercase">
              {role}
            </span>
          ))}
        </div>

        <p class="hero-tagline font-['Playfair_Display'] italic text-[#a3a3a3] text-lg md:text-xl mt-5 max-w-lg mx-auto md:mx-0">
          {siteConfig.tagline}
        </p>

        <!-- Stats -->
        <div class="hero-stats flex justify-center md:justify-start gap-8 md:gap-12 mt-8">
          {siteConfig.stats.map((stat) => (
            <div class="text-center">
              <div class="font-['Bebas_Neue'] text-3xl md:text-4xl text-[#d4a84b]">{stat.value}</div>
              <div class="text-[10px] text-[#a3a3a3] uppercase tracking-wider mt-1">{stat.label}</div>
            </div>
          ))}
        </div>

        <!-- CTAs -->
        <div class="hero-cta mt-8 flex flex-wrap justify-center md:justify-start gap-3">
          <a href="#contacto" class="inline-flex items-center gap-2 px-6 py-3 bg-[#d4a84b] text-black font-semibold text-sm rounded-lg hover:bg-[#e0b85c] transition-colors">
            Hablemos
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </a>
          <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-3 border border-[#2a2a2a] text-[#a3a3a3] text-sm rounded-lg hover:border-[#d4a84b]/40 hover:text-[#d4a84b] transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            @danywalls
          </a>
        </div>

        <!-- Location -->
        <div class="hero-cta mt-5 flex items-center justify-center md:justify-start gap-2 text-sm text-[#a3a3a3]">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
          {siteConfig.location} Â· Desde {siteConfig.origin}
        </div>
      </div>
    </div>
  </div>
</section>

<div class="h-[2px] bar-shimmer"></div>

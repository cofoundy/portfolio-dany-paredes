---
import { siteConfig } from "../config";
---

<section id="hero" class="relative min-h-screen flex items-center bg-[#0a0a0a] overflow-hidden">
  <!-- Grain overlay -->
  <div class="absolute inset-0 opacity-[0.03] pointer-events-none" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E&quot;);"></div>

  <!-- Gold radial glow (bigger, more dramatic) -->
  <div class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[700px] h-[700px] bg-[#d4a84b]/[0.04] rounded-full blur-[150px] pointer-events-none"></div>
  <!-- Secondary glow -->
  <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-[#d4a84b]/[0.02] rounded-full blur-[100px] pointer-events-none"></div>

  <div class="relative z-10 w-full max-w-6xl mx-auto px-6 py-24 md:py-0">
    <div class="flex flex-col md:flex-row items-center gap-12 md:gap-20">

      <!-- Photo with animated ring -->
      <div class="hero-photo flex-shrink-0">
        <div class="photo-ring">
          <div class="relative w-52 h-52 md:w-72 md:h-72 rounded-full overflow-hidden">
            <img src="/profile.jpg" alt={siteConfig.name} class="w-full h-full object-cover" loading="eager" />
            <!-- Subtle inner shadow -->
            <div class="absolute inset-0 rounded-full shadow-[inset_0_0_30px_rgba(0,0,0,0.4)]"></div>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="text-center md:text-left flex-1">
        <!-- Overline -->
        <div class="hero-title mb-4">
          <span class="inline-block text-[#d4a84b]/60 text-xs uppercase tracking-[0.4em] font-medium">Portafoglio</span>
        </div>

        <h1 class="hero-name font-['Bebas_Neue'] text-7xl sm:text-8xl md:text-[7rem] lg:text-[9rem] text-white leading-[0.9] tracking-wide">
          DANY<br/><span class="gold-text-shimmer">PAREDES</span>
        </h1>

        <!-- Gold line under name -->
        <div class="hero-line h-[2px] bg-gradient-to-r from-[#d4a84b] via-[#d4a84b]/60 to-transparent mt-4 max-w-xs mx-auto md:mx-0"></div>

        <!-- Role pills -->
        <div class="hero-title flex flex-wrap justify-center md:justify-start gap-3 mt-6">
          {["Fighter", "Maker", "Entrepreneur"].map((role) => (
            <span class="px-5 py-2 text-[11px] font-semibold text-[#d4a84b] border border-[#d4a84b]/30 rounded-full tracking-[0.2em] uppercase hover:bg-[#d4a84b]/10 transition-colors">
              {role}
            </span>
          ))}
        </div>

        <p class="hero-tagline font-['Playfair_Display'] italic text-[#a3a3a3] text-lg md:text-xl mt-6 max-w-lg mx-auto md:mx-0">
          {siteConfig.tagline}
        </p>

        <!-- Stats with bigger numbers -->
        <div class="hero-stats flex justify-center md:justify-start gap-10 md:gap-14 mt-10">
          {siteConfig.stats.map((stat) => (
            <div class="text-center group">
              <div class="font-['Bebas_Neue'] text-4xl md:text-5xl text-[#d4a84b] counter-value group-hover:scale-110 transition-transform" data-count={stat.value}>{stat.value}</div>
              <div class="text-[10px] text-[#a3a3a3]/70 uppercase tracking-[0.15em] mt-1.5 max-w-[80px]">{stat.label}</div>
            </div>
          ))}
        </div>

        <!-- CTAs -->
        <div class="hero-cta mt-10 flex flex-wrap justify-center md:justify-start gap-4">
          <a href="#contacto" class="group inline-flex items-center gap-2.5 px-7 py-3.5 bg-[#d4a84b] text-black font-bold text-sm rounded-lg hover:bg-[#e0b85c] hover:shadow-[0_0_30px_rgba(212,168,75,0.3)] transition-all">
            Parliamo
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </a>
          <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3.5 border border-[#2a2a2a] text-[#a3a3a3] text-sm rounded-lg hover:border-[#d4a84b]/40 hover:text-[#d4a84b] hover:bg-[#d4a84b]/5 transition-all">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            @danywalls
          </a>
        </div>

        <!-- Location -->
        <div class="hero-cta mt-5 flex items-center justify-center md:justify-start gap-2 text-sm text-[#a3a3a3]/60">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
          {siteConfig.location} Â· Da {siteConfig.origin}
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hero-cta">
    <div class="w-5 h-8 rounded-full border border-[#2a2a2a] flex justify-center pt-1.5">
      <div class="w-1 h-2 bg-[#d4a84b]/50 rounded-full animate-bounce"></div>
    </div>
  </div>
</section>

<div class="h-[2px] bar-shimmer"></div>

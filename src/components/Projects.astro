---
// Expertise â€” Skills grid
import { siteConfig } from "../config";
const expertise = siteConfig.expertise;
---

<section id="expertise" class="py-24 md:py-32 bg-[#0a0a0a] relative overflow-hidden">
  <!-- Background glow -->
  <div class="absolute bottom-0 right-0 w-[400px] h-[400px] bg-[#d4a84b]/[0.02] rounded-full blur-[120px] pointer-events-none"></div>

  <div class="max-w-6xl mx-auto px-6">

    <!-- Section title -->
    <div class="text-center mb-20 reveal">
      <span class="text-[#d4a84b] text-sm uppercase tracking-[0.3em] font-medium">Expertise</span>
      <h2 class="font-['Bebas_Neue'] text-5xl md:text-7xl text-white mt-3">Competenze</h2>
      <div class="w-20 h-[2px] bg-gradient-to-r from-transparent via-[#d4a84b]/60 to-transparent mx-auto mt-5"></div>
    </div>

    <!-- Skills grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-4xl mx-auto">
      {expertise.map((group, i) => (
        <div class={`reveal stagger-${i + 1} group gold-border-gradient rounded-xl p-7`}>
          <div class="flex items-center gap-3 mb-5">
            <div class="w-10 h-10 rounded-lg bg-[#d4a84b]/10 flex items-center justify-center border border-[#d4a84b]/15">
              <div class="w-2.5 h-2.5 bg-[#d4a84b] rounded-sm"></div>
            </div>
            <h3 class="font-['Bebas_Neue'] text-2xl text-[#d4a84b] tracking-wider">{group.category}</h3>
          </div>
          <ul class="space-y-3">
            {group.skills.map((skill) => (
              <li class="flex items-center gap-3 text-[#a3a3a3] text-sm">
                <span class="w-1.5 h-1.5 rounded-full bg-[#d4a84b]/50 flex-shrink-0"></span>
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Languages -->
    <div class="reveal mt-14 max-w-4xl mx-auto">
      <div class="gold-border-gradient rounded-xl p-7">
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 rounded-lg bg-[#d4a84b]/10 flex items-center justify-center border border-[#d4a84b]/15">
            <svg class="w-5 h-5 text-[#d4a84b]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/></svg>
          </div>
          <h3 class="font-['Bebas_Neue'] text-2xl text-[#d4a84b] tracking-wider">Lingue</h3>
        </div>
        <div class="flex flex-wrap gap-6">
          {siteConfig.languages.map((lang) => (
            <div class="flex items-center gap-3">
              <span class="text-white font-medium text-sm">{lang.name}</span>
              <span class="text-[#d4a84b]/80 text-xs px-3 py-1 bg-[#d4a84b]/10 border border-[#d4a84b]/15 rounded-full">{lang.level}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<div class="h-[2px] bar-shimmer"></div>
